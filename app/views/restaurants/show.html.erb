<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h3><%= @restaurant.phone_number %></h3>
<h4><%= @restaurant.category %></h4>
<br>

<%= link_to "Give a review", new_restaurant_review_path(@restaurant)%>

<p><%= link_to "Back to restaurants", restaurants_path%></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>
